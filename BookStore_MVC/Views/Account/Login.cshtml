@model LoginUserVm;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login page</title>
    <link rel="stylesheet" href="~/css/Register.css" />
</head>
<body>
    <div class="registerPage">
        <div class="wallpaper">
            <div class="wallpaperContent"></div>
        </div>

        <div class="formHolder">
            <form asp-action="Login" method="post">
                <h1>Login</h1>

                <label asp-for="Username">Username</label>
                <input type="text" asp-for="Username" placeholder="Enter your username" />

                <label asp-for="Password">Password</label>
                <input type="text" asp-for="Password" placeholder="Enter your username" />

                <button type="submit">Login</button>
                <p>@ViewBag.LoginError</p>
                <p class="loginLink">
                    You dont have an account? <a asp-controller="Account" asp-action="Register">Register</a>
                </p>
            </form>
        </div>
    </div>
</body>
</html>
