@model RegisterUserVm;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register page</title>
    <link rel="stylesheet" href="~/css/Register.css" />
</head>
<body>
    <div class="registerPage">
        <div class="wallpaper">
            <div class="wallpaperContent"></div>
        </div>

        <div class="formHolder">
            <form asp-action="Register" method="post">
                <h1>Register</h1>

                <label asp-for="Name">Name</label>
                <input type="text" asp-for="Name" placeholder="Enter your username" />

                <label asp-for="Family">Family</label>
                <input type="text" asp-for="Family" placeholder="Enter your username" />

                <label asp-for="Username">Username</label>
                <input type="text" asp-for="Username" placeholder="Enter your username" />

                <label asp-for="Email">Email</label>
                <input type="email" asp-for="Email" placeholder="Enter your email" />

                <label asp-for="Password">Password</label>
                <input type="password" asp-for="Password" placeholder="Enter your password" />

                <label asp-for="ConfirmPassword">Confirm Password</label> <span style="color:red">@ViewBag.ConfirmPasswordError</span>
                <input type="password" asp-for="ConfirmPassword" placeholder="Confirm your password"  />

                <button type="submit">Register Now</button>

                <p class="terms">
                    By registering, you agree to our
                    <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.
                </p>

                <p class="loginLink">
                    Already have an account? <a asp-controller="Account" asp-action="Login">Log in</a>
                </p>
            </form>
        </div>
    </div>
</body>
</html>

