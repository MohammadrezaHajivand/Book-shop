@{
    Layout = "AdminLayout";
}
<h1>System Overview</h1>


<div class="card-container">

    <section class="management-card" id="user-management">
        <h2>User Management</h2>
        <p>View, add, edit, or delete system users.</p>
        <button class="btn btn-primary">Manage Users</button>
    </section>

    <section class="management-card" id="category-management">
        <h2>Category Management</h2>
        <p>Organize and maintain product categories.</p>
        <button class="btn btn-secondary">Manage Categories</button>
    </section>
</div>

<div class="content-area">
    <p>
        Select an option from the sidebar or click a button above to manage
        settings.
    </p>
</div>